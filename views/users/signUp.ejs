<% layout("layouts/boilerplate")%>

    <body>
        <div class="row mt-3">
            <h1 class="col-6 offset-4">signUp to WanderLust</h1>
            <div class="col-6 offset-3">
                <form action="/signUp" method="POST" class="needs-validation" novalidate>
                    <div class="mb-3">
                        <label for="username" class="mb-3">Username</label>
                        <input type="text" name="username" class="form-control" required id="username">
                        <div class="invalid-feedback">Please enter a username</div>
                    </div>
                    <div class="mb-3">
                        <label for="mail" class="mb-3">E-mail</label>
                        <input type="text" name="email" class="form-control" required id="email">
                        <div class="invalid-feedback">Please enter a E-mail</div>
                    </div>
                    <div class="mb-3">
                        <label for="password" class="mb-3">Password</label>
                        <input type="text" name="password" class="form-control" required id="password">
                        <div class="invalid-feedback">Please enter a password</div>
                    </div>
                    <button class="btn btn-success offset-5">signUp</button>
                </form>
            </div>
        </div>
    </body>