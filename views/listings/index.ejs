<% layout("layouts/boilerplate")%>
<h1>All Listings </h1>
        
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
    
    <% for (let listing of allListings) { %>
        <a href="/listings/<%=listing._id%>" class="listing-link">
        <div class="listing-card col card">
            <img src="<%= listing.url%>" class="card-img-top" alt="listing">

            <div class="card-img-overlay">open</div>
            <div class="card-body">
                <p class="card-text">
                   <b> <%= listing.title%></b> <br> &#8377; <%= listing.price.toLocaleString("en-IN")%> &nbsp;/night
                </p>
            </div>
        </div>
    </a>
        <% } %>
        
</div>

        
